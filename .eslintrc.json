{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/jsx-key": 0,
        "react/jsx-uses-vars": 2,
        "react/prop-types": 0,
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-console": 0,
        "no-extra-boolean-cast": 0,
        "no-unused-vars": 1,
        "semi": 0,
        "indent": 0,
        "react/display-name": 0
    }
}
